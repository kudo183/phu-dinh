<UserControl x:Class="TestWpfApplication.Pager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="30">
    <StackPanel Orientation="Horizontal">
        <Button Content="Next" x:Name="Next" Click="Next_Click"/>
        <Button Content="Prev" x:Name="Prev" Click="Prev_Click"/>
        <TextBlock Text="Page" VerticalAlignment="Center"/>
        <TextBox Width="30" Text="{Binding CurrentPageIndex, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
        <TextBlock Text=" of " VerticalAlignment="Center"/>
        <TextBlock Text="{Binding PageCount}" VerticalAlignment="Center"/>
        <Button Content="First"/>
        <Button Content="Last"/>
    </StackPanel>
</UserControl>
