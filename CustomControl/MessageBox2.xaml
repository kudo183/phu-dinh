<Window x:Class="CustomControl.MessageBox2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Title}" FontSize="16" Width="*"/>
            <DataGridTextColumn Binding="{Binding Content}" FontSize="16"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
