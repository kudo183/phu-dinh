<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" x:Class="PhuDinh.MainWindow"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Height="40" Background="AliceBlue">
            <Button Margin="5" Content="MatHang" x:Name="btnBaiXe" Click="btnBaiXe_Click"/>
            <Button Margin="5" Content="BaiXe" x:Name="btnMatHang" Click="btnMatHang_Click"/>
            <Button Margin="5" Content="Admin" x:Name="btnAdmin" Click="btnAdmin_Click"/>
        </StackPanel>
        <Border Grid.Row="1" x:Name="_brdMainContent" BorderThickness="1" BorderBrush="Black" Margin="3" Padding="2"/>
    </Grid>
</Window>
