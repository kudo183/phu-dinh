@using PhuDinhWeb
@model IEnumerable<PhuDinhData.tTonKho>
@{
    var grid = new WebGrid(Model, canPage: false, canSort: false);
}

@grid.GetHtml(columns: new[]
{
    grid.Column(header: "Mat Hang", style:"TenMatHangDayDu", format: item => Html.FormatTenMatHangTonKho(item.Value as PhuDinhData.tTonKho)),
    grid.Column(header: "So Luong", style:"SoLuong", format: item => Html.FormatSoLuongTonKho(item.Value as PhuDinhData.tTonKho))
})