<PhuDinhCommonControl:BaseView x:TypeArguments="PhuDinhData:tMatHang"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:PhuDinhCommonControl="clr-namespace:PhuDinhCommonControl"
             xmlns:EntityDataGrid="clr-namespace:PhuDinhCommonControl.EntityDataGrid"
             xmlns:Menu="clr-namespace:PhuDinhCommonControl.Menu"
             xmlns:DesignTimeData="clr-namespace:PhuDinhData.DesignTimeData;assembly=PhuDinhData"
             xmlns:PhuDinhData="clr-namespace:PhuDinhData;assembly=PhuDinhData"
             x:Class="PhuDinhCommonControl.tMatHangView" 
             mc:Ignorable="d"
             d:DataContext="{x:Static DesignTimeData:DDtMatHang.ViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <EntityDataGrid:DGMatHang Grid.Row="0" x:Name="dgMatHang" HeaderAddButtonClick="dgMatHang_HeaderAddButtonClick"/>
        <Menu:BottomMenu Grid.Row="1" x:Name="bmMenu" Button.Click="bmMenu_Click"/>
    </Grid>
</PhuDinhCommonControl:BaseView>
