<CustomControl:DataGridExt x:Class="PhuDinhCommonControl.EntityDataGrid.DGPhuongTien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:CustomControl="clr-namespace:PhuDinhCommonControl.CustomControl" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
          AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" SelectionMode="Single">
    <DataGrid.Columns>
        <!--Ma-->
        <CustomControl:DataGridReadOnlyTextColumn x:Name="maColumn"/>
        <!--Ten phuong tien-->
        <CustomControl:DataGridTextColumnExt x:Name="tenPhuongTienColumn" Binding="{Binding TenPhuongTien}" Header="Ten Phuong Tien" Width="SizeToHeader"/>
    </DataGrid.Columns>
</CustomControl:DataGridExt>
