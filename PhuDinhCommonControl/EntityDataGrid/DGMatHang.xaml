<DataGrid x:Class="PhuDinhCommonControl.EntityDataGrid.DGMatHang"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:PhuDinhData="clr-namespace:PhuDinhData;assembly=PhuDinhData" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
          AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" SelectionMode="Single">
    <DataGrid.Columns>
        <DataGridTextColumn x:Name="maColumn" Binding="{Binding Ma}" Header="Ma" Width="SizeToHeader" IsReadOnly="True">
            <DataGridTextColumn.ElementStyle>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="TextBlock.Background" Value="LightGray" />
                </Style>
            </DataGridTextColumn.ElementStyle>
        </DataGridTextColumn>
        <!--Loai Hang-->
        <DataGridTemplateColumn x:Name="loaiHangColumn" Header="Loai hang">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding LoaiHang.TenLoai}"/>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
                <DataTemplate>
                    <ComboBox IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="True"
                                ItemsSource="{x:Static PhuDinhData:tMatHang.rLoaiHangs}"
                                      DisplayMemberPath="TenLoai"
                                      SelectedValuePath="Ma"
                                      SelectedValue="{Binding MaLoai, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding LoaiHang, UpdateSourceTrigger=PropertyChanged}"
                                      />
                </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn x:Name="tenMatHangColumn" Width="SizeToHeader" Header="Ten Mat Hang" Binding="{Binding TenMatHang}"/>
    </DataGrid.Columns>
</DataGrid>
